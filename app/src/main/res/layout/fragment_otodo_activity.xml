<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.prarthana.doitlaterapp.OTodoActivityFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/t3"
        android:layout_width="123dp"
        android:layout_height="35dp"
        android:layout_x="3dp"
        android:layout_y="130dp"
        android:text="Date"
        android:textSize="24sp"
        android:typeface="serif" />

    <DatePicker
        android:id="@+id/oto_date"
        android:layout_width="287dp"
        android:layout_height="390dp"
        android:layout_x="6dp"
        android:layout_y="168dp" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="121dp"
        android:layout_height="33dp"
        android:layout_x="6dp"
        android:layout_y="9dp"
        android:text="Name"
        android:textSize="24sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="123dp"
        android:layout_height="33dp"
        android:layout_x="7dp"
        android:layout_y="70dp"
        android:text="Details"
        android:textSize="24sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/oto_name"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_x="147dp"
        android:layout_y="5dp"
        android:ems="10"
        android:hint="Enter Title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/oto_msg"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="68dp"
        android:ems="10"
        android:hint="Enter Description"
        android:inputType="textPersonName" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/oto_upload_btn"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:layout_x="301dp"
        android:layout_y="504dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_upload" />


</AbsoluteLayout>
