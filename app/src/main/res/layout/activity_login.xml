<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/todo_lis"
    tools:context="com.example.prarthana.doitlaterapp.LoginActivity">

    <include
        android:id="@+id/login_tool_bar"
        layout="@layout/app_bar_layout" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="313dp"
        android:layout_height="51dp"
        android:layout_x="23dp"
        android:layout_y="101dp"
        android:text="Login To Your Account"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <Button
        android:id="@+id/log_login_btn"
        android:layout_width="187dp"
        android:layout_height="65dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_x="171dp"
        android:layout_y="457dp"
        android:background="@android:color/holo_purple"
        android:elevation="10dp"
        android:fontFamily="serif"
        android:text="Log In"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_pass_layout" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/log_pass_layout"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_x="-1dp"
        android:layout_y="373dp">

        <EditText
            android:id="@+id/editText3"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/log_email_layout"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_x="5dp"
        android:layout_y="299dp">

        <EditText
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:hint="Enter email" />
    </android.support.design.widget.TextInputLayout>

</AbsoluteLayout>
